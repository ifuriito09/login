<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>

<% if flash[:danger] %>
  p <%= flash[:danger] %>
<% end %>
<div class="flash"></div>

<%= form_for @user,url: {action: "create"} do |form| %>

<table>
  <tr>
    <th><%= form.label :name %></th>
    <td><%= form.text_field :name %></td>
  </tr>

    <th><%= form.label :password %></th>
    <td><%= form.text_field :password %></td>
  </tr>
  <tr>
    <th><%= form.label :password_confirmation %></th>
    <td><%= form.text_field :password_confirmation %></td>
  </tr>
</table>
<p><%= form.submit %></p>

<% end %>
